{
    "version": 2,
    "builds": [
      {
        "src": "server/wsgi.py",
        "use": "@vercel/python"
      },
      {
        "src": "client/package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "dist" }
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "server/wsgi.py" },
      { "src": "/(.*)", "dest": "client/dist/$1" }
    ]
  }